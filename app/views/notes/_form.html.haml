= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :content
    %br
    = f.text_area :content
  .field
    = f.label :status
    %br
    = f.select :status, t('notes.status').map{ |key, value| [ value, key ] }

  .actions
    = f.submit t('common.' + ( @note.new_record? ? 'create' : 'update' ) )